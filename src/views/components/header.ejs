        <!-- logout box -->
        <a class="logout" href="/logout"><div class="logout_box flex justify align cursor">Logout</div></a>

    </div>


    <div class="header flex align">
        <!-- Hamburger menu icons -->
        <div class="first ">
            <img class="cursor invert hamburger_btn" src="/images/icons/hamburger_menu_icon.svg" alt="">
        </div>


        <div class="middle flex align">
            <!-- homebutton -->
            <div class="home_btn cursor">
                <button class="cursor">
                    <img class="invert" src="/images/icons/home.svg" alt="">
                </button>
            </div>

            <!-- searchbar -->
            <div class="search_bar flex flex_col">
                <button class="flex align">
                    <img class="invert" src="images/icons/search.svg" alt="">
                    <input type="text" placeholder="Search Movies and Celebs">
                </button>

                <div class="searchedInfo">
                    <div class="infoBoxes">

                    </div>
                </div>
            </div>
        </div>

        <div class="last flex align">

            <div class="logo flex align">
                <svg width="150" height="100" viewBox="0 0 100 20" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="retro-grad" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="0%" style="stop-color:#f72585;stop-opacity:1" />
                            <stop offset="100%" style="stop-color:#e55252;stop-opacity:1" />
                        </linearGradient>
                    </defs>

                    <rect width="100%" height="100%" rx="10" fill="black" />

                    <text x="50%" y="50%" text-anchor="middle" fill="url(#retro-grad)"
                        font-family="'Press Start 2P', monospace" font-size="12" dy=".35em">
